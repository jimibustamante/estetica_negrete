<%= form_tag(send_contact_path, :class => "form-horizontal") do %>
    <div class="control-group">
        <%= label_tag "name", "Nombre", :class => "control-label"%>
        <div class="controls">
            <%= text_field_tag "name", "" %>
        </div>
    </div>
    <div class="control-group">
        <%= label_tag "email", "Correo", :class => "control-label"%>
        <div class="controls">
            <%= text_field_tag "email", "", :type => "email"  %>
        </div>
    </div>
    <div class="control-group">
        <%= label_tag "comment", "Comentario", :class => "control-label"%>
        <div class="controls">
            <%= text_area_tag "comment", "", :size => "25x5"  %>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn">Enviar</button>
        </div>
    </div>
 <% end -%> 